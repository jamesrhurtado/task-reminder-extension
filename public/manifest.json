{
  "manifest_version": 3,
  "name": "FocusTask",
  "version": "0.1.0",
  "description": "Stay focused by defining your task before visiting distracting sites.",
  "permissions": ["tabs", "storage", "scripting"],
  "background": {
    "service_worker": "src/background/backgroundScript.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/contentScript.ts"]
    }
  ]
}
